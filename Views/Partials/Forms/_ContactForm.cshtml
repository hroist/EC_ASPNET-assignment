@model ContactsViewModel

<section class="contact-form">
    <div class="container">
        <div class="title">Contact us</div>

        <form method="post" novalidate>
            <div class="name form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" id="name">
                <span class="error" asp-validation-for="Name"></span>
            </div>
            <div class="email form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="email">
                <span class="error" asp-validation-for="Email"></span>
            </div>
            <div class="phoneNumber form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" id="phone">
            </div>
            <div class="companyName form-group">
                <label asp-for="Company"></label>
                <input asp-for="Company" id="company">
            </div>
            <div class="message form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" id="message"></textarea>
                <span asp-validation-for="Message" class="error"></span>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Save my name, email in the this browser for the next time I comment.
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>