@model ProductModel


<div class="product-card-large">
    <a class="card-link" asp-controller="products" asp-action="details" asp-route-id="@Model.ArticleNumber">
        <div class="card-image">
            <img src="@Model.ImageUrl" alt="" />
        </div>
        <div class="title">
            @Model.Name
        </div>
        <div class="body">
            Best dress for everyone ed totam velit risus viverra nobis donec recusandae perspiciatis incididuno
        </div>
        <div class="tag">
            Post by: Admin     Comments 13
        </div>
    </a>
</div>